<h1>
  <storong>Books</storong>
</h1>


<table>
  <tr>
    <th>title</th>
    <th>body</th>
    <th colspan="0"></th>
  </tr>
<% @books.each do |book| %>
<tr>
  <td>
  <%= book.title %>
  </td>
  <td>
  <%= book.body %>
  </td>
  <td>
    <%= link_to 'Show', book_path(book.id) %>
  </td>
  <td>
    <%= link_to 'Edit', edit_book_path(book.id) %>
  </td>
  <td>
    <%= link_to 'Destroy',book_path(book.id) %>
  </td>
</tr>
<% end %>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
  <% @book.errors.count %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= meesage %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


